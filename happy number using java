class Solution {
    public boolean isHappy(int n) {
        while(n>=10)
        {
        int sum=0,r;
        while(n!=0)
        {
         r=n%10;
         sum=sum+r*r;
         n=n/10;
    
        }
    n=sum;
    }

    if((n==1)||(n==7))
    {
        return true;
    }
    else
    {
    return false;
    }
    }
}
